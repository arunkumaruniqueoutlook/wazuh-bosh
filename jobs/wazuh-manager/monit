check process ossec-analysisd
  matching "ossec-analysisd"
  start program "/var/vcap/jobs/wazuh-manager/bin/wazuh_server_ctl start"
  stop program "/var/vcap/jobs/wazuh-manager/bin/wazuh_server_ctl stop"
  group vcap

