#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

JOB_NAME=wazuh-manager
PACKAGE_DIR=/var/vcap/packages/wazuh-manager
STORE_DIR=/var/vcap/store/$JOB_NAME
RUN_DIR=${PACKAGE_DIR}/var/run
LOG_DIR=/var/vcap/sys/log/$JOB_NAME
PIDFILE=${RUN_DIR}/${1}-*.pid
INSTALL_DIR=/var/ossec

case $1 in

  start)
    exec ${INSTALL_DIR}/bin/ossec-control $1

    ;;

  stop)
    exec ${INSTALL_DIR}/bin/ossec-control $1

    ;;
  *)
    echo "Usage: wazuh_server_ctl {ossec-daemon}{start|stop}"

    ;;

esac
exit 0