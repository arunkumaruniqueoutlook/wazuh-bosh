#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

JOB_NAME=wazuh-manager-worker
PACKAGE_DIR=/var/vcap/packages/wazuh-manager-worker
STORE_DIR=/var/vcap/store/$JOB_NAME
RUN_DIR=${PACKAGE_DIR}/var/run
LOG_DIR=/var/vcap/sys/log/$JOB_NAME
INSTALL_DIR=/var/ossec

case $1 in

  start)
    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR
    mkdir -p $STORE_DIR
    exec ${INSTALL_DIR}/bin/ossec-control $1

    ;;

  stop)
    exec ${INSTALL_DIR}/bin/ossec-control $1
    
    ;;
  *)
    echo "Usage: wazuh_server_ctl {ossec-daemon}{start|stop}"

    ;;

esac
exit 0